# F1 Race Insights - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment (local/dev/prod)
ENV=local

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# Data Storage Directories
DATA_DIR=./data
CACHE_DIR=./data/cache
MODEL_DIR=./models
REPORTS_DIR=./reports

# FastF1 Configuration
FASTF1_CACHE_ENABLED=true
FASTF1_CACHE_DIR=./data/fastf1_cache

# Database (Optional - leave empty if not using)
# For PostgreSQL (Docker Compose)
DATABASE_URL=postgresql://f1user:f1password@db:5432/f1db
# For SQLite (local development)
# DATABASE_URL=sqlite:///./f1_insights.db

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=f1user
POSTGRES_PASSWORD=f1password
POSTGRES_DB=f1db

# S3 Storage (Optional - for production artifact storage)
# Leave empty to disable S3 (uses local storage)
S3_BUCKET=
S3_PREFIX=f1-race-insights/
AWS_REGION=us-east-1
# AWS credentials managed via IAM roles or ~/.aws/credentials

# ML Configuration
RANDOM_SEED=42
N_JOBS=-1
OPTUNA_N_TRIALS=100

# Model Training
TRAIN_TEST_SPLIT=0.2
VALIDATION_SPLIT=0.2
EARLY_STOPPING_ROUNDS=50

# Feature Engineering
ENABLE_FEATURE_SELECTION=true
FEATURE_IMPORTANCE_THRESHOLD=0.01

# Backtesting
BACKTEST_START_YEAR=2022
BACKTEST_END_YEAR=2024

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_DIR=./metrics
