# Production Environment Configuration Template
# Copy this to .env in production and fill in actual values

# ============================================================================
# CRITICAL: CHANGE ALL VALUES MARKED WITH <CHANGE-ME>
# ============================================================================

# Environment
ENV=prod

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false  # Disable auto-reload in production
LOG_LEVEL=warning  # Use warning/error in prod (info for staging)

# Data Storage Directories
DATA_DIR=/app/data
CACHE_DIR=/app/data/cache
MODEL_DIR=/app/models
REPORTS_DIR=/app/reports

# FastF1 Configuration
FASTF1_CACHE_ENABLED=true
FASTF1_CACHE_DIR=/app/data/fastf1_cache

# S3 Storage (Required for production)
# TODO: Fill in your S3 bucket and region
S3_BUCKET=<CHANGE-ME-BUCKET-NAME>  # e.g., my-company-f1-models
S3_PREFIX=production/
AWS_REGION=<CHANGE-ME-AWS-REGION>  # e.g., us-east-1
# AWS credentials: Use IAM roles (ECS) or instance profile (EC2)
# DO NOT hardcode AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY

# ML Configuration
RANDOM_SEED=42
N_JOBS=-1  # Use all available cores
OPTUNA_N_TRIALS=100

# Model Training
TRAIN_TEST_SPLIT=0.2
VALIDATION_SPLIT=0.2
EARLY_STOPPING_ROUNDS=50

# Feature Engineering
ENABLE_FEATURE_SELECTION=true
FEATURE_IMPORTANCE_THRESHOLD=0.01

# Backtesting
BACKTEST_START_YEAR=2022
BACKTEST_END_YEAR=2024

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_DIR=/app/metrics

# Security & Performance
# TODO: Set secure values
ALLOWED_HOSTS=<CHANGE-ME-DOMAIN>  # e.g., api.example.com
CORS_ORIGINS=<CHANGE-ME-FRONTEND-URL>  # e.g., https://example.com
MAX_WORKERS=4  # Adjust based on instance size

# Optional: Sentry for error tracking
# SENTRY_DSN=<CHANGE-ME-SENTRY-DSN>

# Optional: New Relic for APM
# NEW_RELIC_LICENSE_KEY=<CHANGE-ME-NEW-RELIC-KEY>
# NEW_RELIC_APP_NAME=F1-Race-Insights-API
